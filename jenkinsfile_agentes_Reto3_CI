pipeline {
    agent any
   
    stages {
        stage('Get Code') {
            agent {label 'agente1'}
            steps {                
                sh'''
                whoami
                hostname
                '''
                git branch: 'develop', credentialsId: 'Github_user_AlvarLegaz_token_as_pass', url: 'https://github.com/AlvarLegaz/todo-list-aws.git'
            }
        }
        
        stage('Static Tests'){
            agent {label 'agente1'}
            steps {
                sh '''
                    whoami
                    hostname
                    flake8 --exit-zero --format=pylint --max-line-length 40 src > flake8.out
                    bandit --exit-zero -r . -f custom -o bandit.out --severity-level medium --msg-template "{abspath}:{line}: [{test_id}] {msg}"
                '''
                recordIssues tools: [flake8(name: 'Flake8', pattern: 'flake8.out')], qualityGates: [[threshold: 1000, type: 'TOTAL', unstable: true], [threshold: 2000, type: 'TOTAL', unstable: false]]
                recordIssues tools: [pyLint(name: 'Bandit', pattern: 'bandit.out')], qualityGates: [[threshold: 2000, type: 'TOTAL', unstable: true], [threshold: 4000, type: 'TOTAL', unstable: false]]
            }
        }
        
        stage('SAM-Deploy'){
            agent {label 'agente1'}
            steps{
                sh '''
                    whoami
                    hostname
                    sam build
                    sam deploy --config-file samconfig.toml --config-env staging --no-fail-on-empty-changeset
                    api_urls_outputs=$(sam list stack-outputs --output json --stack-name staging-todo-list-aws --region us-east-1)
                    URL_BASE=$(echo "$api_urls_outputs" | jq -r '.[0].OutputValue')   
                    echo $URL_BASE>url_base.txt
                    cat url_base.txt
                '''
                stash includes: "url_base.txt", name:"url_base_stash_repo"
            }
        }
        
        stage('Rest Test'){
            agent {label 'agente2'}
            steps{
                git branch: 'develop', url: 'https://github.com/AlvarLegaz/todo-list-aws.git'
                unstash "url_base_stash_repo"
                sh '''
                whoami
                hostname
                export BASE_URL=$(cat url_base.txt)   
                echo $BASE_URL
                pytest --junitxml=result-rest.xml test/integration/todoApiTest.py
                '''
                junit 'result*.xml'
            }
        }
    }
}
